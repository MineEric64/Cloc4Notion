<Window x:Class="Cloc4Notion.FindContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cloc4Notion"
        mc:Ignorable="d"
        Title="Find Content" Height="463" Width="614">
    <Grid x:Name="mainGrid">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="18,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="423" Height="25" FontFamily="Noto Sans KR" FontSize="14"/>
        <Button x:Name="findButton" Content="Find" HorizontalAlignment="Left" Margin="454,23,0,0" VerticalAlignment="Top" Height="25" Width="125" FontFamily="JetBrains Mono" FontSize="14" Click="findButton_Click"/>
        <ListView x:Name="listView" Margin="18,60,20,0" Height="344" VerticalAlignment="Top" SelectionChanged="listView_SelectionChanged" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
